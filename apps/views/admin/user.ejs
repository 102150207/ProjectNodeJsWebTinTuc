<!DOCTYPE html>
<html>
	<head> 
	   <%- include("layout/head.ejs")%>
	</head>
	<body>
	     <%- include("layout/nav.ejs")%>
		<!-- ------------------------------------ -->
		<!-- ------------------------------------ -->
	<div class="clearfix">
		<!-- phần left của admin -->
        <%- include("layout/left.ejs")%>
		<!-- phần left của admin -->

		<!-- ============================ -->
		<!--Phần chứa nội dung chính-->
      <div id="main">
         <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-home"></i> Trang quản trị</a></li>
            <li class="active"><a href="/admin/users">Tài khoản</a></li>
         </ol>
         <div class="col-xs-12">
            <form id="admin-form" method="post" action="" role="form">
               <div class="col-xs-12">
                  <div class="form-group">
                     <!-- Single button -->
                     <div class="btn-group">
                        <select id="task" name="task" class="form-control">
                           <option>Tác vụ</option>
                           <option value="delete">Xóa tài khoản</option>
                           <option value="deactive">Khóa</option>
                           <option value="active">Mở khóa</option>
                        </select>
                     </div>
                     <a href="/admin/new_users" class="btn btn-submit"><small><i class="fa fa-plus"></i></small> Thêm mới</a>
                     <div class="btn-group pull-right hidden-xs" id="div-search">
                        <input id="search" name="search" type="text" value="" class="form-control" placeholder="Tìm kiếm">
                        <span class="fa fa-search"></span>
                     </div>
                  </div>
                  <table class="table table-bordered table-hover">
                     <thead>
                        <tr>
                           <th><input id="check_all" type="checkbox"></th>
                           <th class="hidden-xs">ID</th>
                           <th>Tài khoản</th>
                           <th class="hidden-xs">Email</th>
                           <th >Password</th>
                           <th>Hình Ảnh</th>
                           <th class="hidden-xs">Level</th>
                           <th class="hidden-sm hidden-xs">Ngày tạo</th>
                           <th class="hidden-sm hidden-xs">Ngày Sửa</th>
                           <th>Sửa</th>
                           <th>Tình trạng</th>
                        </tr>
                     </thead>
                     <tbody>
                       <% if(data && data.users){ %>
                           <% for(var i = 0 ; i < data.users.length;i++){%>
                           <tr>
                              <td>
                                 <input name="id[]" type="checkbox" value="0">
                              </td>
                              <td class="hidden-xs"><%= data.users[i].id %></td>
                              <td>
                                 <a href="new-type_product.html"><%= data.users[i].name %></a>
                              </td>
                              <td class="hidden-xs"><%= data.users[i].email %></td>
                              <td class="hidden-xs"><%= data.users[i].password %></td>
                              <td><%= data.users[i].hinhanh %></td>
                              <td class="hidden-xs"><%= data.users[i].level %></td>
                              <td class="hidden-sm hidden-xs"><%= data.users[i].create_at %></td>
                              <td class="hidden-sm hidden-xs"><%= data.users[i].update_at %></td>
                              <td>
                                 <a href="/admin/new_users"><i class="fa fa-edit" data-toggle="tooltip" data-placement="top" title="Sửa tài khoản"></i></a>
                              </td> 
                              <td>
                                 <i  
                                    data-toggle="tooltip" data-placement="top" title="Đang hoạt động"></i>
                              </td>
                           </tr>
                           <%}%>
                        <%}%>
                     </tbody>
                  </table>
                 <!--  <div class="text-right">
                     <ul class="pagination" id="step5">
                        <li class="disabled"><span>«</span></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">»</a></li>
                     </ul>
                  </div> -->
                  <p><strong><i class="fa fa-bookmark"></i>Ghi chú: </strong></p>
                  <p class="note-items"><i class="fa fa-check text-success"></i> Tài khoản đang hoạt động.</p>
                  <p class="note-items"><i class="fa fa-times text-danger"></i> Tài khoản bị khóa.</p>
               </div>
            </form>
         </div>
      </div>
         <!--END #main-->
   </div>
	</body>
</html>
